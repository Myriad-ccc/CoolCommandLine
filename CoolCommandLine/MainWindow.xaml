<Window
    x:Class="CoolCommandLine.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CoolCommandLine"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1024"
    Height="898"
    FontFamily="VCR OSD Mono"
    SnapsToDevicePixels="True"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <RichTextBox
            x:Name="ConsoleLogs"
            Grid.Row="0"
            Background="#181818"
            FontSize="36"
            Foreground="White">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Ready!" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <TextBox
            x:Name="CommandLine"
            Grid.Row="1"
            Height="32"
            Background="Gray"
            FontSize="24"
            Foreground="White"
            KeyDown="CommandLine_KeyDown" />

    </Grid>
</Window>